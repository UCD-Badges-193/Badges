@model Badges.Models.Profile.ProfileEditModel

<div class="row">
    <div class="col-lg-3">
        <div class="form-group well">
            <label>Profile Picture</label>
            <div class="thumbnail">
                @Html.Action("ViewProfileImage")
                <div class="caption">
                    <p>
                        <label for="image">Replace Profile Picture</label>
                        <input type="file" id="profile-upload" name="image" accept="image/*" />
                    </p>  
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="form-group">
            @Html.LabelFor(x => x.Profile.FirstName)
            @Html.TextBoxFor(x => x.Profile.FirstName, new {@class = "form-control", placeholder = "First Name"})
            @Html.ValidationMessageFor(x => x.Profile.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Profile.LastName)
            @Html.TextBoxFor(x => x.Profile.LastName, new {@class = "form-control", placeholder = "Last Name"})
            @Html.ValidationMessageFor(x => x.Profile.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Profile.Email)
            @Html.TextBoxFor(x => x.Profile.Email, new {@class = "form-control", placeholder = "Email Address"})
            @Html.ValidationMessageFor(x => x.Profile.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Roles)
            @this.Select("Roles").Options(Model.Roles, x=>x.Id, x=>x.Name).Class("form-control")
            @Html.ValidationMessageFor(x => x.Roles)
        </div>
            
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="icon-save button-icon"></i>
                Save
            </button>
        </div>
    </div>
</div>