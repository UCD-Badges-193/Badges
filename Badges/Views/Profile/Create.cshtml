@model Badges.Core.Domain.Profile

@{
    ViewBag.Title = "Create You Profile";
}

<h2>Welcome to Badges</h2>

@using (Html.BeginForm("Create", "Profile", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Create your profile</legend>
    </fieldset>

    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, new { @class="form-control", placeholder="First Name"})
        @Html.ValidationMessageFor(x => x.FirstName)
        
    </div>
    <div class="form-group">
    
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName, new { @class="form-control", placeholder="Last Name"})
        @Html.ValidationMessageFor(x => x.LastName)
    
    </div>
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-save button-icon"></i>
            Save
        </button>
    </div>
}