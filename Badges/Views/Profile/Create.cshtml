@model Badges.Controllers.ProfileEditModel

@{
    ViewBag.Title = "Create You Profile";
}

<h2>Welcome to Badges</h2>

@using (Html.BeginForm("Create", "Profile", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Create your profile</legend>
    </fieldset>

    <div class="form-group">
        @Html.LabelFor(x => x.Profile.FirstName)
        @Html.TextBoxFor(x => x.Profile.FirstName, new { @class="form-control", placeholder="First Name"})
        @Html.ValidationMessageFor(x => x.Profile.FirstName)
        
    </div>
    <div class="form-group">
    
        @Html.LabelFor(x => x.Profile.LastName)
        @Html.TextBoxFor(x => x.Profile.LastName, new { @class="form-control", placeholder="Last Name"})
        @Html.ValidationMessageFor(x => x.Profile.LastName)
    
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x=>x.Roles)
        @Html.DropDownListFor(x=>x.Roles, Model.Roles.Select(r => new SelectListItem { Value = r.Id, Text = r.Name}), new { @class="form-control"})
        @Html.ValidationMessageFor(x => x.Roles)
    </div>
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-save button-icon"></i>
            Save
        </button>
    </div>
}