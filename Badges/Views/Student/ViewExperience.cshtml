@model Badges.Core.Domain.Experience

@{
    ViewBag.Title = "View Experience";
}

<h2>View Experience</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="well">
            <fieldset>
                <legend>@Model.Name <a href="@Url.Action("EditExperience", "Student", new { id = Model.Id })" class="pull-right"><i class="icon-pencil"></i></a></legend>
                <p>@Model.Description</p>
                <hr/>
            </fieldset>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="well">
            <a href="#supporting-work" data-toggle="modal" class="btn img-rounded span2">
                <i class="icon-plus icon-4x"></i>
                <h4>Add Supporting Work</h4>
            </a>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var work in @Model.SupportingWorks)
    {
        <div class="col-sm-3">
            <div class="well well-sm">
                <p>@work.Description</p>
                <img src="@Url.Action("ViewWork", "Student", new { id = work.Id })" class="img-thumbnail" />
            </div>
        </div>   
    }
</div>

<!-- Modal -->
<div id="supporting-work" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="supporting-work-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
          
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="supporting-work-label">Add Supporting Work</h3>
            </div>
            @using (Html.BeginForm("AddSupportingWork", "Student", new { id = Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-group">
                            <label>Please enter a description of this work</label>
                            <textarea name="Description" class="form-control" placeholder="Work Description" data-val="true" data-val-required="Work Description Is Required"></textarea>
                            <span class="field-validation-valid" data-valmsg-for="Description" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group">
                            <label>Upload File</label>
                            <input type="file" name="workFile" class="form-control" />
                        </div>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-danger" value="Add Work" />
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                </div>
            }
        </div>
    </div>
</div>