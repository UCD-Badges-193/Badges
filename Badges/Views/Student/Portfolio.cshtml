@model IQueryable<Badges.Core.Domain.Experience>

@{
    ViewBag.Title = "My Portfolio";
}

<h2>My Portfolio</h2>

<div class="row">
    <div class="col-lg-4">
        <div class="well">
            <div class="thumbnail">
                @Html.Action("ViewProfileImage", "Profile")
                <div class="caption">
                    <h4>@ViewBag.Name</h4>  
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var experience in Model)
    {
        <div class="col-md-4">
            <div class="well">
                <fieldset>
                    <legend>@Html.ActionLink(experience.Name, "ViewExperience", "Student", new { id = experience.Id}, null)</legend>
                    <p>@experience.Description</p>
                </fieldset>
            </div>
        </div>
    }
</div>