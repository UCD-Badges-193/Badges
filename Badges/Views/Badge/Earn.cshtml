@model Badges.Core.Domain.Badge

@{
    ViewBag.Title = "Earn";
}

<h2>Earn</h2>

<div class="row">
    <div class="col-md-12 well well-sm">
        <div class="media">
            <span class="pull-left" >
                <img class="media-object" alt="Badge Icon" src="@Model.ImageUrl" style="width: 120px; height: 120px;">
            </span>
            <div class="media-body">
                <h4 class="media-heading">@Model.Name</h4>
                @Model.Description
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @for (var i = 0; i < Model.BadgeCriterias.Count; i++)
        {
            var criterion = Model.BadgeCriterias[i];
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        <h4>Criteria @(i+1)</h4> 
                        <blockquote><p>@criterion.Details</p></blockquote>
                        <ul>
                            <li>Work1</li>
                            <li>Work2</li>
                        </ul>
                        <div class="form-actions">
                            <a href="#associate-work" data-toggle="modal" class="btn btn-info"><i class="icon-plus-sign icon-2x"></i> Associate</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="#" class="btn btn-link">Cancel</a>
            </div>
        </form>
    </div>
</div>

<!-- Modal -->
<div id="associate-work" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="associate-work-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
          
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="associate-work-label">Associate Work</h3>
            </div>
            <div class="modal-body">
                <form>
                    <input type="search" class="form-control" placeholder="Search Your Experiences & Work"/>
                </form>
                <i class="icon-spinner icon-spin"></i>
                <div id="experience-container"></div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-danger" value="Add Work" />
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            </div>
            }
        </div>
    </div>
</div>

@section AdditionalScripts
{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/earn")

    <script>
        Badges.options({ MyWorkUrl: '@Html.Raw(Url.Action("MyWork"))' });

        $(function() {
            Badges.init();
        });
    </script>
}
