@model dynamic

@{
    ViewBag.Title = "Instructor Dashboard";
}

<h2>Instructor Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("MyStudents")" class="btn img-rounded well well-lg">
            <i class="icon-group icon-4x"></i>
            <h5>My Students</h5>
        </a>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("Notifications")" class="btn img-rounded well well-lg">
            <i class="icon-bell icon-4x"></i> <span class="badge badge-important pull-right">@ViewBag.NotificationCount</span>
            <h5>View Notifications</h5>
        </a>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("Portfolio")" class="btn img-rounded well well-lg disabled">
            <i class="icon-minus icon-4x"></i>
            <h5>All Portfolios</h5>
        </a>
    </div>
</div>