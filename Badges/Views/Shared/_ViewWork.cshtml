@model Badges.Core.Domain.SupportingWork

@if (Model.Type == Badges.Core.Domain.SupportingWorkTypes.Photo)
{
    if (string.IsNullOrWhiteSpace(Model.Url))
    {
        <img src="@Url.Action("ViewWorkFile", "Experience", new {id = Model.Id})" alt="@Model.Description" class="img-thumbnail" />
    }
    else
    {
        <img src="@Model.Url" alt="@Model.Description" class="img-thumbnail" />
    }
}