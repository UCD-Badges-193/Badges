@using Badges.Core.Domain
@model SupportingWork

@switch (Model.Type)
{
    case SupportingWorkTypes.Photo:
        if (string.IsNullOrWhiteSpace(Model.Url))
        {
            <img src="@Url.Action("ViewWorkFile", "Experience", new {id = Model.Id})" alt="@Model.Description" class="img-thumbnail" />
        }
        else
        {
            <img src="@Model.Url" alt="@Model.Description" class="img-thumbnail" />
        }
        break;
    case SupportingWorkTypes.Text:
        <blockquote>
            <object>@Model.Notes</object>
        </blockquote>
        break;
    case SupportingWorkTypes.Video:
        var embedUrl = Model.GetEmbedUrl();
        if (!string.IsNullOrWhiteSpace(embedUrl))
        {
            <iframe src="@Model.GetEmbedUrl()" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        }
        break;
    case SupportingWorkTypes.Link:
        <a href="@Model.Url" target="_blank">
            @Model.Url <i class="icon-external-link pull-right"></i>
        </a>
        break;
    case SupportingWorkTypes.File:
        <a href="@Url.Action("ViewWorkFile", "Experience", new {id = Model.Id})">View File</a>
        break;
}