@model IEnumerable<Badges.Core.Domain.Instructor>

@{
	ViewBag.Title = "Index";
}

<h2>Instructors</h2>


@section SubNav
{
	<li>@Html.ActionLink("Create New", "Create")</li>
}

<a href="@Url.Action("Create")" class="btn btn-large">Create New</a>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th></th>
			<th>
				FirstName
			</th>
			<th>
				LastName
			</th>
			<th>
				Email
			</th>
			<th>
				Identifier
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				<a href='@Url.Action("Edit", new {id=item.Id})' class="btn" title="Edit"><i class="icon-edit"></i></a>
			</td>
			<td>
				@item.FirstName
			</td>
			<td>
				@item.LastName
			</td>
			<td>
				@item.Email
			</td>
			<td>
				@item.Identifier
			</td>
		    <td>
		        @using (Html.BeginForm("Delete", "Instructor"))
		        {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.Id)
                    <button type="submit" class="btn btn-danger"><i class="icon-remove"></i></button>
		        }
		    </td>
		</tr>
}
	</tbody>
</table>

