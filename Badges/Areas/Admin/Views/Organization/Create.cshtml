@model Badges.Areas.Admin.Controllers.OrganizationViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create Organization</h2>


@section SubNav
{
	<li>@Html.ActionLink("Back to List", "Index")</li>
}

<form method="POST" class="form-horizontal well-small">
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<fieldset>
	    <div class="form-group">
	        @Html.LabelFor(model=>model.Organization.Name)
	        @Html.TextBoxFor(model => model.Organization.Name, new { @class = "form-control"})
	        @Html.ValidationMessageFor(model => model.Organization.Name)
	        
	    </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save changes</button>
            @Html.ActionLink("Cancel", "Index", null, new {@class="btn btn-link"})
        </div>
    </fieldset>
</form>


