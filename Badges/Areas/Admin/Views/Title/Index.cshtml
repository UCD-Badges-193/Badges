@model IEnumerable<Badges.Core.Domain.Title>

@{
	ViewBag.Title = "Titles";
}

<h2>Titles</h2>

@section SubNav
{
	<li>@Html.ActionLink("Create New", "Create")</li>
}

<a href="@Url.Action("Create")" class="btn btn-large">Create New</a>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@item.Name
			</td>
		    <td>
		        @using (Html.BeginForm("Delete", "Title"))
		        {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.Id)
                    <button type="submit" class="btn btn-danger"><i class="icon-remove"></i></button>
		        }
		    </td>
		</tr>
}
	</tbody>
</table>

