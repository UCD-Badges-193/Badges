@model IEnumerable<Badges.Core.Domain.User>

@{
	ViewBag.Title = "Index";
}

<h2>Emulate Users</h2>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				User
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model.Where(x=>x.Identifier != User.Identity.Name)) {
		<tr>
			<td>
		        @item.Profile.DisplayName (@item.Identifier)
		    </td>
			<td>
				<a href='@Url.Action("Emulate", "Account", new {area = string.Empty, id = @item.Identifier })'>Emulate @item.Profile.DisplayName</a>
			</td>
		</tr>
}
	</tbody>
</table>

