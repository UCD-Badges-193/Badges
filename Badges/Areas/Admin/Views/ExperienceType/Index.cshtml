@model IEnumerable<Badges.Core.Domain.ExperienceType>

@{
	ViewBag.Title = "Experience Types";
}

<h2>Experience Types</h2>

@section SubNav
{
	<li>@Html.ActionLink("Create New", "Create")</li>
}

<a href="@Url.Action("Create")" class="btn btn-large">Create New</a>

<table class="table table-striped table-hover">
	<thead>
	    <tr>
	        <th></th>
	        <th>
	            Name
	        </th>
	        <th>
	            Icon
	        </th>
	        <th></th>
            <th></th>
	    </tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <a href='@Url.Action("Edit", new {id=item.Id})' class="btn" title="Edit"><i class="icon-edit"></i></a>
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Icon
        </td>
        <td>
            <i class="@item.Icon icon-2x"></i>
            @*<a href='@Url.Action("Delete", new {id=item.Id})' class="btn" title="Remove"><i class="icon-remove"></i></a>*@
        </td>
        <td>
            @using (Html.BeginForm("Delete", "ExperienceType"))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", item.Id)
                <button type="submit" class="btn btn-danger"><i class="icon-remove"></i></button>
            }
        </td>
    </tr>
}
	</tbody>
</table>

