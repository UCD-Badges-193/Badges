@model IEnumerable<Badges.Core.Domain.ExperienceType>

@{
	ViewBag.Title = "Experience Types";
}

<h2>Index</h2>


@section SubNav
{
	<li>@Html.ActionLink("Create New", "Create")</li>
}

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Icon
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@item.Name
			</td>
			<td>
				@item.Icon
			</td>
		    <td>
		        <i class="@item.Icon icon-2x"></i>
		        @*<a href='@Url.Action("Delete", new {id=item.Id})' class="btn" title="Remove"><i class="icon-remove"></i></a>*@
		    </td>
		</tr>
}
	</tbody>
</table>

