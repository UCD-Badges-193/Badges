@model Badges.Areas.Admin.Controllers.BadgeCategoryViewModel

<form method="POST" class="form-horizontal well-small" novalidate="novalidate">
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<fieldset>
        <legend>Badge Category</legend>
		<div class="form-group">
		    @Html.LabelFor(x=>x.BadgeCategory.Name)
            @Html.EditorFor(model => model.BadgeCategory.Name)
			@Html.ValidationMessageFor(model => model.BadgeCategory.Name)
        </div>
		<div class="form-group">
		    @Html.LabelFor(x=>x.BadgeCategory.ImageUrl)
            @Html.EditorFor(model => model.BadgeCategory.ImageUrl)
			@Html.ValidationMessageFor(model => model.BadgeCategory.ImageUrl)
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save changes</button>
            @Html.ActionLink("Cancel", "Index", null, new {@class="btn btn-link"})
        </div>
    </fieldset>
</form>